{
  "name": "gaming-library-launcher",
  "version": "1.0.0",
  "description": "Desktop launcher for Gaming Library portfolio games",
  "main": "src/main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run start-api\" \"wait-on http://localhost:5000 && electron .\"",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "start-api": "cd ../../src/Presentation/GamingLibrary.Api && dotnet run"
  },
  "build": {
    "appId": "com.gaminglibrary.launcher",
    "productName": "Gaming Library",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "src/assets/images/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "src/assets/images/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "src/assets/images/icon.png"
    }
  },
  "keywords": [
    "gaming",
    "portfolio",
    "electron",
    "desktop"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^latest",
    "electron-builder": "^latest",
    "concurrently": "^latest",
    "wait-on": "^latest"
  },
  "dependencies": {
    "axios": "^latest",
    "electron-store": "^latest",
    "node-pty": "^latest"
  }
}
